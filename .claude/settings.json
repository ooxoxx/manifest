{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/post-edit-lint.sh",
            "timeout": 120
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(docker compose watch)",
      "Bash(docker compose up*)",
      "Bash(docker compose down*)",
      "Bash(docker compose ps)",
      "Bash(docker compose logs*)",
      "Bash(docker compose exec backend bash scripts/tests-start.sh*)",
      "Bash(docker compose exec backend pytest*)",
      "Bash(docker compose exec backend bash scripts/lint.sh)",
      "Bash(docker compose exec backend bash scripts/format.sh)",
      "Bash(docker compose exec backend alembic*)",
      "Bash(docker ps*)",
      "Bash(docker logs*)",
      "Bash(npx playwright test*)",
      "Bash(pnpm install*)",
      "Bash(pnpm run lint)",
      "Bash(pnpm run format)",
      "Bash(pnpm run generate-client)",
      "Bash(pnpm run dev)",
      "Bash(pnpm run build)",
      "Bash(uv run*)",
      "Bash(uv pip*)",
      "Bash(uv sync*)",
      "Bash(uv add*)",
      "Bash(uv remove*)",
      "Bash(uv lock*)",
      "Bash(./scripts/generate-client.sh)",
      "Bash(bash scripts/tests-start.sh*)",
      "Bash(bash scripts/lint.sh)",
      "Bash(bash scripts/format.sh)",
      "Bash(git status)",
      "Bash(git log*)",
      "Bash(git diff*)",
      "Bash(git branch*)",
      "Bash(git show*)",
      "Bash(git add*)",
      "Bash(git merge*)",
      "Bash(git commit*)",
      "Bash(cat *)",
      "Bash(ls *)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash(tree *)",
      "Bash(pwd)",
      "Bash(which *)",
      "Bash(echo *)",
      "Bash(env)",
      "Bash(printenv*)",
      "Skill(superpowers:*)",
      "mcp__plugin_playwright_playwright"
    ],
    "deny": [
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(dd *)",
      "Bash(mkfs*)",
      "Bash(format*)",
      "Bash(shutdown*)",
      "Bash(reboot*)",
      "Bash(init *)",
      "Read(**/*key*.pem)",
      "Read(**/*key*.key)"
    ]
  }
}
