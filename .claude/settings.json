{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/post-edit-lint.sh",
            "timeout": 120
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "// === Docker Commands ===",
      "Bash(docker compose:*)",
      "Bash(docker ps:*)",
      "Bash(docker logs:*)",
      "Bash(docker exec:*)",
      "Bash(docker info:*)",
      "Bash(docker version:*)",
      "Bash(docker system:*)",

      "// === Git Operations ===",
      "Bash(git status)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git branch:*)",
      "Bash(git show:*)",
      "Bash(git add:*)",
      "Bash(git merge:*)",
      "Bash(git commit:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git checkout:*)",
      "Bash(git worktree:*)",
      "Bash(git rev-parse:*)",
      "Bash(git check-ignore:*)",

      "// === Python/uv Package Management ===",
      "Bash(uv run:*)",
      "Bash(uv pip:*)",
      "Bash(uv sync:*)",
      "Bash(uv add:*)",
      "Bash(uv remove:*)",
      "Bash(uv lock:*)",
      "Bash(ruff check:*)",
      "Bash(python -m py_compile:*)",

      "// === pnpm Package Management ===",
      "Bash(pnpm install:*)",
      "Bash(pnpm add:*)",
      "Bash(pnpm run lint)",
      "Bash(pnpm run lint:*)",
      "Bash(pnpm run format)",
      "Bash(pnpm run generate-client)",
      "Bash(pnpm run generate-routes:*)",
      "Bash(pnpm run dev)",
      "Bash(pnpm run build)",
      "Bash(pnpm run build:*)",
      "Bash(pnpm run type-check:*)",
      "Bash(pnpm run test:unit:*)",
      "Bash(pnpm test:run:*)",
      "Bash(pnpm ls:*)",
      "Bash(pnpm why:*)",
      "Bash(pnpm dlx:*)",
      "Bash(pnpm exec tsr:*)",
      "Bash(pnpm biome check:*)",
      "Bash(pnpm --version:*)",
      "Bash(timeout 10 pnpm run dev:*)",

      "// === npm Commands ===",
      "Bash(npm run build:*)",
      "Bash(npm run lint)",
      "Bash(npm run generate-client:*)",
      "Bash(npm run routes:*)",
      "Bash(npm run test)",
      "Bash(timeout 10 npm run dev:*)",

      "// === npx Tools ===",
      "Bash(npx playwright:*)",
      "Bash(npx playwright test:*)",
      "Bash(npx playwright install chromium)",
      "Bash(npx biome:*)",
      "Bash(npx tsc:*)",
      "Bash(npx tsr:*)",
      "Bash(npx shadcn@latest add:*)",
      "Bash(npx @tanstack/router-cli generate:*)",
      "Bash(NODE_OPTIONS='--experimental-vm-modules' npx playwright test:*)",
      "Bash(VITE_COVERAGE=true npx playwright test:*)",
      "Bash(timeout 10 npx vite:*)",

      "// === Backend Scripts ===",
      "Bash(./scripts/generate-client.sh)",
      "Bash(bash scripts/tests-start.sh:*)",
      "Bash(bash scripts/lint.sh)",
      "Bash(bash scripts/format.sh)",

      "// === System Utilities ===",
      "Bash(cat :*)",
      "Bash(ls :*)",
      "Bash(lsof -i:*)",
      "Bash(lsof:*)",
      "Bash(find :*)",
      "Bash(find:*)",
      "Bash(grep :*)",
      "Bash(head :*)",
      "Bash(tail :*)",
      "Bash(wc :*)",
      "Bash(wc:*)",
      "Bash(tree :*)",
      "Bash(pwd)",
      "Bash(which :*)",
      "Bash(echo :*)",
      "Bash(env)",
      "Bash(printenv:*)",
      "Bash(file:*)",
      "Bash(chmod:*)",

      "// === Web Access ===",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:127.0.0.1)",

      "// === Skills ===",
      "Skill(superpowers:*)",
      "Skill(frontend-design)",
      "Skill(document-skills:webapp-testing)",

      "// === MCP Tools ===",
      "mcp__plugin_playwright_playwright"
    ],
    "deny": [
      "Bash(wget :*)",
      "Bash(rm -rf /)",
      "Bash(rm -rf /:*)",
      "Bash(dd :*)",
      "Bash(mkfs:*)",
      "Bash(format:*)",
      "Bash(shutdown:*)",
      "Bash(reboot:*)",
